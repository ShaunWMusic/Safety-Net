{{outlet}}
<div class="detail">
  <div class="detail-card">
    <div class="detail-card__title">Edit a Category</div>
    {{#simple-form class="card__form" onsubmit=(action "editCategory") as | formValues |}}
      {{input class="form__input" type="text" required=true value=formValues.name placeholder="Edit Category"}}
    {{/simple-form}}
    <div class="button-box">
      <button type="submit" class="btn danger">Delete</button>
      <button type="submit" class="btn">Save</button>
    </div>
  </div>
</div>
