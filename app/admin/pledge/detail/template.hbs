{{outlet}}
<div class="detail">

  <div class="detail-card">
    <div class="detail-card__title">Pledge</div>
    <div class="user-org user-info">{{ model.name }}</div>
    <div class="pledge-detail user-info">{{ model.description }}</div>
    <div class="pledge-end user-info">Contact:{{ model.contactInfo }}</div>
    <div class="pledge-end user-info">Claimed:{{ model.isClaimed }}</div>
    <div class="pledge-end user-info">Approved:{{ model.isApproved }}</div>
    <div class="pledge-end user-info">{{ model.duration }}</div>
    <div class="button-box">
      <button type="button" {{action "toggleAndSave" pledge "isClaimed"}} class="btn">Claimed</button>
      <button type="button" {{action "toggleAndSave" pledge "isApproved"}} class="btn">Status</button>
    </div>
  </div>

</div>
