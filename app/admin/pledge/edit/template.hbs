<div class="detail">
  <div class="detail-card">
    <div class="detail-card__title">Edit Pledge of user</div>

    {{#simple-form class="card__form" onsubmit=(action "updateForm") as | formValues |}}
      <div class="pledge-detail user-info">Pledge</div>
      {{input class="form__input" type="text" required=true id="pledge.name"value=formValues.pledge placeholder="Pledge"}}
      <div class="pledge-detail user-info">End Date</div>
      {{input class="form__input" type="text" required=true value=formValues.date placeholder="End Date"}}
      <div class="button-box">
        <button type="submit" class="btn">Save</button>
      </div>
    {{/simple-form}}
  </div>
</div>
