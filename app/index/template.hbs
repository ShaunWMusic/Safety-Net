<section>
    <div class="hero">
    <img src="../img/shoe.jpg" class="hero-image" alt="">
    <h1 class="hero-text">One Liner Goes Here</h1>
    {{#link-to "er" class="hero-button"}}I Need Shelter{{/link-to}}
    </div>
</section>
<section>
<div class="container">
  <div class="category">
    <h2 class="category-header">Choose Category</h2>
    <div class="category-dropdown">
      <div class="category-dropdown--text">
        <div class="category-dropdown--text category-dropdown--text__cat">{{#link-to "resources" (query-params category="Housing")}}House{{/link-to}}</div>
        <div class="category-dropdown--text category-dropdown--text__cat">{{#link-to "resources" (query-params category="Food Assistance")}}Food{{/link-to}}</div>
        <div class="category-dropdown--text category-dropdown--text__cat">{{#link-to "resources" (query-params category="Clothing")}}Clothing{{/link-to}}</div>
      </div>
    </div>
<!-- Dropdown Structure -->
  </div>
</div>
</section>
<section>
  <div class="container">
    <div class="localcommunity">
      <h2 class="localcommunity-header">Local Community Resources</h2>
      {{#each model as |pledge|}}

      <div class="localcommunity-card">
        <span class="localcommunity-card--content localcommunity-nonprofit">{{ pledge.name}}</span>
        <span class="localcommunity-card--content localcommunity-posted">{{ pledge.duration }}</span>
      </div>
      <div class="localcommunity-card">
        <span class="localcommunity-card--content">{{ pledge.description }}</span>
        <span class="localcommunity-card--content localcommunity-right">{{ pledge.contactInfo }}</span>
      </div>
      {{/each}}
    </div>
  </div>
</section>
